<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.imankur.analogclockview.AnalogClock
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="500dp"
            android:text="This activity demonstrates the use of Frame Layout with multiple UI on top of each other." />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="160dp"
            android:layout_height="89dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="480dp"
            android:background="@drawable/textview_rounded"
            android:text="Rounded Corners"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="230dp"
            android:fontFamily="sans-serif-black"
            android:text="My Clock"
            android:textAlignment="center"
            android:textSize="20sp" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>